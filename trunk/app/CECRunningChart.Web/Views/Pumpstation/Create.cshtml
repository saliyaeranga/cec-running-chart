@model CECRunningChart.Web.Models.Pumpstation.PumpstationModel
@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#PumpStationName").focus();

        $("#pumpstationform").validate({
            rules: {
                PumpStationName: {
                    required: true
                }
            }
        });

        $("#pumpstationform").submit(function () {
            if ($("#pumpstationform").valid()) {
                return true;
            }
            else {
                return false;
            }
        });
    });
</script>
@using (Html.BeginForm("Create", "Pumpstation", FormMethod.Post, new { @id = "pumpstationform" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Create New Pumpstation</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.PumpStationName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.PumpStationName, new { @maxlength = "200" })
            @Html.ValidationMessageFor(model => model.PumpStationName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
