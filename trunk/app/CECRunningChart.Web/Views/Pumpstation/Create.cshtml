@model CECRunningChart.Web.Models.Pumpstation.PumpstationModel
@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#PumpStationName").focus();

        $("#pumpstationform").validate({
            rules: {
                PumpStationName: {
                    required: true
                }
            }
        });

        $("#pumpstationform").submit(function () {
            if ($("#pumpstationform").valid()) {
                return true;
            }
            else {
                return false;
            }
        });
    });
</script>
@using (Html.BeginForm("Create", "Pumpstation", FormMethod.Post, new { @id = "pumpstationform" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Create New Pumpstation</legend>
        <div class="row">
            <div class="wrapper" style="width: 250px;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.PumpStationName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.PumpStationName, new { @maxlength = "200" })
                    @Html.ValidationMessageFor(model => model.PumpStationName)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="wrappernew" style="width: 250px;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
        </div>
        <div class="row">
            <input class="createBtn" type="submit" value="Create" />
        </div>
    </fieldset>
}
<div class="bckBtn">
    @Html.ActionLink("Back to List", "Index")
</div>
