@model CECRunningChart.Web.Models.Project.ProjectModel
@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ProjectName").focus();

        $("#projectform").validate({
            rules: {
                ProjectName: {
                    required: true
                },
                ProjectManager: {
                    required: true
                },
                ProjectLocation: {
                    required: true
                }
            }
        });

        $("#projectform").submit(function () {
            if ($("#projectform").valid()) {
                return true;
            }
            else {
                return false;
            }
        });
    });
</script>
@using (Html.BeginForm("Edit", "Project", FormMethod.Post, new { @id = "projectform" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Edit Project</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="wrapper">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ProjectName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ProjectName)
                    @Html.ValidationMessageFor(model => model.ProjectName)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="wrapper">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ProjectManager)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ProjectManager)
                    @Html.ValidationMessageFor(model => model.ProjectManager)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="wrapper">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ProjectLocation)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ProjectLocation)
                    @Html.ValidationMessageFor(model => model.ProjectLocation)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="wrappernew">
                <div class="editor-label">
                    @Html.LabelFor(model => model.ProjectDescription)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ProjectDescription)
                    @Html.ValidationMessageFor(model => model.ProjectDescription)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="wrapper">
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsActiveProject)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.IsActiveProject)
                    @Html.ValidationMessageFor(model => model.IsActiveProject)
                </div>
            </div>
        </div>
        <div class="row">
            <input class="createBtn" type="submit" value="Save" />
        </div>
    </fieldset>
}
<div class="bckBtn">
    @Html.ActionLink("Back to List", "Index")
</div>
