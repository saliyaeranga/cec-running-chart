@model IEnumerable<CECRunningChart.Web.Models.Project.ProjectModel>
@{
    ViewBag.Title = "Manage Projects";
}
<div class="inrPgHeadding">
    <h2>
        Manage Projects
    </h2>
</div>
<div class="createNewRow">
    <a href="@Url.Action("Create", "Project")">Add New Project</a>
</div>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="tblContainer">
    <table class="tblFont">
        <tr>
            <th class="tblModel">
                Project Name
            </th>
            <th class="tblModel">
                Project Manager
            </th>
            <th class="tblModel">
                Project Location
            </th>
            <th class="tblModel">
            </th>
            <th class="tblModel">
            </th>
            <th class="tblModel">
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="mainColum">
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectManager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectLocation)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
