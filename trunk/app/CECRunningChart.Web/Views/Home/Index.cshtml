@model CECRunningChart.Web.Models.User.LogOnModel
@{
    Layout = "~/Views/Shared/_LoginPageLayout.cshtml";
    ViewBag.Title = "CEC-Login Page";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#UserName").focus();
        //TODO: Add jquery validation
    });
</script>
<div class="row">
    <div class="logo">
        <img src="/Content/images/logo.png" />
    </div>
</div>
<div class="row">
    <div class="companyName">
        <h1>
            Consulting Engineers & Contractors (Pvt) Ltd</h1>
        <h2>
            Daily Running Chart</h2>
    </div>
</div>
<div class="row">
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="logBox">
        <div class="icon">
            <img src="/Content/images/loginIcon.png" />
        </div>
        
        <div class="row">
            <div class="lable">
                User Name
            </div>
            <div class="data">
                <input type="text" id="UserName" name="UserName" value="@Model.UserName" maxlength="20" />
            </div>
        </div>
        <div class="row">
            <div class="lable">
                Password
            </div>
            <div class="data">
                <input type="password" id="Password" name="Password" maxlength="20" />
            </div>
        </div>
        <div class="row">
        <div class="errorMsg">
        @if (ViewBag.InvalidUsernameOrPassword != null && ViewBag.InvalidUsernameOrPassword)
        {
            <div  style="color:Red; float:left;">
                    &nbsp;Invalid Username or Pssword. Please try again.
            </div>
        }
         @Html.ValidationSummary(false)
         </div>
            <div class="btn"> <input type="submit" name="Login" value=""/> </div>
        </div>
    </div>
}
</div>
