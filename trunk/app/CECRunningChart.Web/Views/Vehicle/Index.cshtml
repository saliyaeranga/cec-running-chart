@model IEnumerable<CECRunningChart.Web.Models.Vehicle.VehicleModel>
@{
    ViewBag.Title = "Manage Vehicles & Machines";
}
<div class="inrPgHeadding">
    <h2>Manage Vehicles & Machines</h2>
</div>
<div class="createNewRow">
    <a href="@Url.Action("Create", "vehicle")">Add New Vehicle / Machines</a>
</div>
<div class="tblContainer">
<table class="vehicleTbl">
    <tr>
        <th class="tblModel">
            Vehicle #
        </th>
        <th class="tblModel">
            Company Code
        </th>
        <th class="tblModel">
            Vehicle / Machine Type
        </th>
        <th class="tblModel">
            Driver / Operator Name
        </th>
        <th class="tblModel">
        </th>
        <th class="tblModel">
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="mainColum">
                @Html.DisplayFor(modelItem => item.VehicleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverOperatorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
               
            </td>
            <td>
                 @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
</div>