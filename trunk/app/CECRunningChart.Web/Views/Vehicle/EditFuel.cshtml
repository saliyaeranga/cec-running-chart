@model CECRunningChart.Web.Models.Vehicle.FuelModel
@{
    ViewBag.Title = "Edit Fuel";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Edit Fuel</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="wrapper">
                <div class="editor-label">
                    @Html.LabelFor(model => model.FuelType)
                </div>
                <div class="editor-field displayStyles">
                    @Model.FuelType
                </div>
            </div>
        </div>
        <div class="row">
            <div class="wrapper">
                <div class="editor-label">
                    @Html.LabelFor(model => model.FuelRate)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.FuelRate)
                    @Html.ValidationMessageFor(model => model.FuelRate)
                </div>
            </div>
        </div>
        <div class="row">
            <input class="createBtn" type="submit" value="Save" />
        </div>
    </fieldset>
}
<div class="bckBtn">
    @Html.ActionLink("Back to List", "Fuel")
</div>
